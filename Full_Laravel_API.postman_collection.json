{
    "info": {
        "name": "Laravel Sanctum API Test with /api prefix",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/register",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "register"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password\",\n    \"password_confirmation\": \"password\"\n}"
                }
            }
        },
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/login",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "login"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password\"\n}"
                }
            }
        },
        {
            "name": "Forgot Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/forgot-password",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "forgot-password"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\"\n}"
                }
            }
        },
        {
            "name": "Reset Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/reset-password",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "reset-password"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\",\n    \"token\": \"RESET_TOKEN\",\n    \"password\": \"newpassword\",\n    \"password_confirmation\": \"newpassword\"\n}"
                }
            }
        },
        {
            "name": "Get Profile",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/profile",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "profile"
                    ]
                }
            }
        },
        {
            "name": "Logout",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/logout",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "logout"
                    ]
                }
            }
        },
        {
            "name": "Verify Email",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/verify-email?token=VERIFY_TOKEN",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "verify-email?token=VERIFY_TOKEN"
                    ]
                }
            }
        },
        {
            "name": "Resend Verification Email",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/email/verification-notification",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "email",
                        "verification-notification"
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "token",
            "value": ""
        }
    ]
}